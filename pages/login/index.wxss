/* pages/login/index.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx 30rpx;
  align-items: center;
  justify-content: space-between;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.app-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #0052d9;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.app-subtitle {
  font-size: 32rpx;
  color: #666666;
  letter-spacing: 1rpx;
}

.avatar-container {
  margin: 60rpx 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-top: 16rpx;
}

.action-container {
  margin-bottom: 100rpx;
}

.start-button {
  min-width: 300rpx;
  font-weight: 600;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 82, 217, 0.2);
}

.footer {
  margin-top: auto;
  padding: 40rpx 0;
}

.privacy-notice {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
}

.avatar-section {
  position: relative;
  margin: 40rpx auto 20rpx;
  width: 160rpx;
  height: 160rpx;
}

.user-avatar {
  display: block;
  margin: 0 auto;
  border: 4rpx solid #0052d9;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
  border-radius: 50%;
  overflow: hidden;
}

.avatar-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 10;
  background: none;
  padding: 0;
  margin: 0;
}

.avatar-tip {
  position: absolute;
  bottom: -40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #0052d9;
  width: 160rpx;
}

.nickname-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto 20rpx;
  padding: 16rpx 30rpx;
  background-color: transparent;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.nickname-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.edit-icon {
  font-size: 32rpx;
  color: #0052d9;
  margin-left: 10rpx;
  opacity: 0.7;
}

.nickname-container {
  margin-top: 20rpx;
}

.weui-input {
  margin: 10rpx auto;
  padding: 16rpx 30rpx;
  border: 2rpx solid #0052d9;
  border-radius: 40rpx;
  width: 400rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #ffffff;
  transition: all 0.3s;
}

.btn-group {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.submit-btn, .cancel-btn {
  margin: 0 10rpx;
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  color: #ffffff;
  background-color: #0052d9;
}

.cancel-btn {
  color: #666666;
  background-color: #f0f0f0;
}

button::after {
  border: none;
}