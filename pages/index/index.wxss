.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0 0 32rpx 0;
}

/* 顶部用户信息和问候语 */
.header-section {
  background-color: #ffffff;
  padding: 32rpx 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.user-profile {
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 24rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.05);
  border: none;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.greeting {
  font-size: 28rpx;
  color: #888888;
}

/* 卡片通用样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 0 24rpx 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-content {
  width: 100%;
}

/* 进度卡片 */
.progress-chart-container {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
}

.charts {
  width: 300px;
  height: 200px;
}

.start-btn-container {
  padding: 0 24rpx 24rpx;
}

/* 目标进度卡片 */
.goal-item {
  margin-bottom: 32rpx;
}

.goal-item:last-child {
  margin-bottom: 0;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goal-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

.goal-title text {
  margin-left: 8rpx;
}

.goal-value {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.goal-progress {
  width: 100%;
}

/* 最近活动卡片 */
.more-link {
  font-size: 28rpx;
  color: #0052d9;
}

.activity-item {
  padding: 16rpx 0;
}

.activity-time {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 16rpx;
}

.activity-content {
  display: flex;
  align-items: center;
}

.activity-icon {
  margin-right: 24rpx;
  background-color: rgba(0, 82, 217, 0.1);
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity-details {
  flex: 1;
}

.activity-distance {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
}

.activity-tag {
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.no-activity {
  padding: 48rpx 0;
  text-align: center;
}

/* 底部安全区域，防止内容被 tabbar 遮挡 */
.safe-area-bottom {
  height: 120rpx; /* 调整此值以适应您的 tabbar 高度 */
}
 
